{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "site_name": {
            "defaultValue": "wb-js-site-basic-arm",
            "type": "string"
        },
        "app_service_plan_name": {
            "defaultValue": "wb-js-site-basic-arm",
            "type": "string"
        },
        "app_service_plan_sku": {
            "defaultValue": {
                "name": "F1",
                "tier": "Free",
                "size": "F1",
                "family": "F",
                "capacity": 0
            },
            "type": "object"
        },
        "deployment_location": {
            "type": "string",
            "defaultValue": "Central US"
        }
    },
    "variables": {},
    "resources": [
        {
            "comments": "This is the App Service Plan",
            "type": "Microsoft.Web/serverfarms",
            "sku": "[parameters('app_service_plan_sku')]",
            "kind": "app",
            "name": "[parameters('app_service_plan_name')]",
            "apiVersion": "2018-02-01",
            "location": "[parameters('deployment_location')]",
            "properties": {},
            "dependsOn": []
        },
        {
            "comments": "This is the WebApp",
            "type": "Microsoft.Web/sites",
            "kind": "app",
            "name": "[parameters('site_name')]",
            "apiVersion": "2018-02-01",
            "location": "[parameters('deployment_location')]",
            "properties": {
                "enabled": true,
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('app_service_plan_name'))]",
                "cloningInfo": null,
                "httpsOnly": true,
                "siteConfig": {
                    "netFrameworkVersion": "v4.0",
                    "phpVersion": null,
                    "pythonVersion": null,
                    "nodeVersion": "8.10.0",
                    "javaVersion": null,
                    "javaContainer": null,
                    "javaContainerVersion": null,
                    "siteAuthEnabled": false,
                    "http20Enabled": false,
                    "minTlsVersion": "1.2",
                    "ftpsState": "Disabled"                    
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('app_service_plan_name'))]"
            ]
        }
    ]
}